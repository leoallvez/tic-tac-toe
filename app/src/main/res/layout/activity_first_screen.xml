<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_first_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <Button
        android:id="@+id/btnOnePlayer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
    android:text="@string/text_one_player"
        android:background="#0288D1"
        android:padding="8dp"
        android:layout_margin="16dp"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:onClick="startOnePlayer"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnTwoPlayers"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/text_two_players"
        android:background="#00C853"
        android:padding="8dp"
        android:layout_margin="16dp"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:onClick="startTwoPlayers"
        android:layout_below="@+id/btnOnePlayer"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>